{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}{{ parent() }} - Login required{% endblock %}
{% block fos_user_content %}
{% if error %}
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        {{ error|trans({}, 'FOSUserBundle') }}
    </div>
{% endif %}
<div class="col-md-4 col-md-offset-4">
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
        <h2 class="form-signin-heading">Login required</h2>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <label class="sr-only" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <input class="form-control" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" type="text" id="username" name="_username" value="{{ last_username }}" required autofocus />

        <label class="sr-only" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <input class="form-control" type="password" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" id="password" name="_password" required />

        <div class="checkbox">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
            </label>
        </div>
        <input type="submit" class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    </form>
</div>
{% endblock fos_user_content %}
